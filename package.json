{
  "name": "@apac/ui-library",
  "version": "0.1.0",
  "private": false,
  "description": "Shared UI components for micro-frontends",
  "author": "Gaurav Prakash",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
